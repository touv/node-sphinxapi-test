# - I put everything in one block and added sharedscripts, so that mysql gets 
#   flush-logs'd only once.
#   Else the binary logs would automatically increase by n times every day.
# - The error log is obsolete, messages go to syslog now.
ll/var/log/mysql/mysql.log ll/var/log/mysql/mysql-slow.log ll/var/log/mysql/error.log {
	daily
	rotate 7
	missingok
	create 640 thouveni thouveni 
	compress
	sharedscripts
	postrotate
		test -x ll/usr/bin/mysqladmin || exit 0
		MYADMIN="ll/usr/bin/mysqladmin"
		$MYADMIN flush-logs
	endscript
}
